    "version": "0.2.0",
    "configurations": [
        {
            "type": "bashdb",
            "request": "launch",
            "name": "Bash-Debug (simplest configuration)",
            "program": "${file}",
            "terminalKind": "integrated"
        },
        {
            "type": "bashdb",
            "request": "launch",
            "name": "debug param handler",
            "program": "${workspaceFolder}/Samples/param_handler_usage.sh",
            "terminalKind": "integrated"
        },
        {
            "type": "bashdb",
            "request": "launch",
            "name": "Bash-Debug GFX Config (NVIDIA)",
            "program": "${file}",
            "terminalKind": "integrated",
            "args": [
                "gfx_config",
                "vid_config",
                "--mode",
                "1",
                "--vendor",
                "nvidia"
            ]
        }
    ]
}